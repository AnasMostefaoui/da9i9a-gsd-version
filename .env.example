# Salla OAuth Configuration
SALLA_CLIENT_ID=
SALLA_CLIENT_SECRET=
# Local: http://localhost:5173/auth/salla/callback
# Production: https://your-app.railway.app/auth/salla/callback
SALLA_REDIRECT_URI=http://localhost:5173/auth/salla/callback
# Webhook secret for signature verification (from Salla Partner Dashboard)
SALLA_WEBHOOK_SECRET=

# Database
# Local (docker-compose): postgresql://salla_da9i9a:salla_da9i9a_dev@localhost:5433/salla_da9i9a
# Railway: Automatically set as DATABASE_URL when you add PostgreSQL plugin
DATABASE_URL=

# AI Services
GEMINI_API_KEY=

# ===========================================
# Scraping Providers (configure at least one)
# ===========================================

# Apify - Primary for AliExpress (https://apify.com/)
APIFY_TOKEN=

# Apify Actor Configuration (per-platform)
# Default for all: apify/e-commerce-scraping-tool
# APIFY_ACTOR_DEFAULT=apify/e-commerce-scraping-tool

# Override per platform:
# APIFY_ACTOR_ALIEXPRESS=apify/e-commerce-scraping-tool
# APIFY_ACTOR_AMAZON=junglee/amazon-crawler

# Oxylabs - Primary for Amazon (https://oxylabs.io/)
# Uses E-commerce Scraper API
OXYLABS_USERNAME=
OXYLABS_PASSWORD=

# Legacy ScraperAPI (deprecated - use Apify/Oxylabs instead)
SCRAPERAPI_KEY=

# ===========================================

# Image Enhancement (choose one or both)
CLAID_API_KEY=
NANO_BANANA_API_KEY=

# Inngest (Background Jobs)
# Get these from Inngest Dashboard -> Manage after running `npx inngest-cli dev`
INNGEST_SIGNING_KEY=
INNGEST_EVENT_KEY=

# App Configuration
NODE_ENV=development
SESSION_SECRET=change-me-in-production

# Dev Mode - Skip Salla OAuth (set to "true" to bypass)
DEV_BYPASS_AUTH=false
